{
  "expo": {
    "name": "NutriScan",
    "slug": "NutriScan",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F2FFF5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nishantjoshi.nutriscan",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan food items for nutrition analysis.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to save scanned food images.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow NutriScan to access your camera to scan food items."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f5805458-5daa-40af-9d06-f22f829f4ed3"
      }
    }
  }
}
